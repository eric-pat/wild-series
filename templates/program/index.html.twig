{% extends 'base.html.twig' %}

{% block title %}Wild Series - All programs{% endblock %}

{% block body %}
        <h1 class="d-flex justify-content-center my-5" style="height: 40px"
                {{ stimulus_controller('symfony/ux-typed', {
                    strings: [
                        'Bienvenue sur Wild Series',
                        'Le meilleur site pour suivre tes séries préférées',
                        'Découvre les dernières actus sur les séries du moment',
                    ],
                    smartBackspace: true,
                    startDelay: 100,
                    typeSpeed: 100,
                    backSpeed: 50,
                    backDelay: 100,
                    loop: true,
                    showCursor: false,
                    cursorChar: '✨'
                }) }}>
        </h1>

        <div class="d-flex justify-content-evenly mb-5">
            <div class="d-flex flex-wrap justify-content-evenly">
                {% for program in programs %}
                    <div class="card" style="width: 18rem; color:white;
                    background-color: var(--primary-color)">
                        <img class="card-img-top"
                             src="{{ asset('uploads/images/posters/' ~ program.poster) }}"
                             alt="Poster" style="height:60%">
                        <div class="card-body d-flex flex-column">
                            <div class="flex-grow-1">
                                <h5 class="card-title">{{ program.title }}
                                    - {{ program.year }}</h5>
                                <h6>Catégorie : {{ program.category.name }}</h6>
                                <p class="card-text">{{ program.synopsis }}</p>
                            </div>
                            <div>
                                <a href="{{ path("program_show", { 'slug': program.slug }) }}">
                                    <button class="btn btn-primary">Voir la fiche</button>
                                </a>
                                {% if is_granted("ROLE_ADMIN") %}
                                    <a href="{{ path('program_edit', { 'slug': program.slug} ) }}">
                                        <button class="btn btn-success">Éditer</button>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucune série trouvée.</p>
                {% endfor %}
            </div>
        </div>
{% endblock %}
