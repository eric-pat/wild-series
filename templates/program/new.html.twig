{% extends "base.html.twig" %}

{% block body %}
    <section class="d-flex justify-content-center">
    <div class=" my-5 col-md-6">
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.title) %}
                <div class="error">
                    {{ form_errors(form.title) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.synopsis) }}
            {{ form_widget(form.synopsis, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.synopsis) %}
                <div class="error">
                    {{ form_errors(form.synopsis) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.year) }}
            {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.actors) }}
            <div class="row">
                {% for actor in form.actors %}
                    <div class="col-md-4">
                        <div class="form-check">
                            {{ form_widget(actor, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(actor, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="form-group mb-5">
            {{ form_label(form.poster) }}
            {{ form_widget(form.poster, {'attr': {'class': 'form-control-file'}}) }}
        </div>
        <button type="submit" class="btn btn-return">Ajouter une s√©rie</button>
        {{ form_end(form) }}
    </div>
    </section>
{% endblock %}
