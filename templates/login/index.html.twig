{% extends 'base.html.twig' %}

{% block title %}Wild Series - Password{% endblock %}

{% block body %}
    <section>
        <h1 class="d-flex justify-content-center my-5">Identification</h1>
    </section>

    <div class="container mb-5">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="d-flex justify-content-center">
            <form action="{{ path('app_login') }}" method="post"
                  style="background-color: var(--primary-color); width: 30%;">
                <div class="d-flex justify-content-center">
                    <img src="{{ asset('images/logo-navbar.png') }}"
                         alt="logo Wild-series">
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label m-lg-3">Email</label>
                    <input type="text" id="username" name="_username"
                           value="{{ last_username }}" class="form-control"
                           aria-describedby="emailHelp" style="width: 90%; margin: auto">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label m-lg-3">Password</label>
                    <input type="password" id="password" name="_password"
                           class="form-control" style="width: 90%; margin: auto">
                </div>
                <div class="d-flex justify-content-evenly mb-4">
                    <button type="submit" class="btn btn-primary">Se Connecter</button>
                </div>
                <div class="d-flex justify-content-evenly mb-4">
                    <a href="{{ path('app_forgot_password_request') }}">
                        Mot de passe oubli√© ?
                    </a>
                    <a href="{{ path('app_register') }}">
                        Inscription
                    </a>
                </div>
                <input type="hidden" name="program_index" value="/account">
            </form>
        </div>
    </div>

{% endblock %}


