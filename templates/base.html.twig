<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.png') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>

    <header id="top">{% include ('_includes/_navbar.html.twig') %}</header>

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <div id="scroll" class="back-to-top-wrapper" style="display: none;">
        <a href="#top" class="back-to-top-link" aria-label="Scroll to Top">üîù</a>
    </div>

    <footer>{% include ('_includes/_footer.html.twig') %}</footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const backToTopWrapper = document.querySelector('#scroll');

            function handleScroll() {
                if (window.scrollY > 0) {
                    backToTopWrapper.style.display = 'block';
                } else {
                    backToTopWrapper.style.display = 'none';
                }
            }

            window.addEventListener('scroll', handleScroll);
        });
    </script>

    </body>
</html>
