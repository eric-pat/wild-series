<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.png') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>


    <body {{ stimulus_controller('theme') }}
            {{ stimulus_target('theme', 'body') }}>

    <header>{% include ('_includes/_navbar.html.twig') %}</header>

{#    <button {{ stimulus_action('theme', 'toggleDarkMode') }}>#}
{#        clic me#}
{#    </button>#}


    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div {{ stimulus_controller('symfony/ux-swup/swup') }} id="swup">
        {% block body %}{% endblock %}
    </div>

    </body>
</html>
