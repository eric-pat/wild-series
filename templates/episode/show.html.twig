{% extends 'base.html.twig' %}

{% block title %}Episode - {{ episode.season.program.title }} {% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center my-5">{{ episode.season.program.title }}</h1>
    <h2 class="d-flex justify-content-center mb-5">{{ episode.season.slug }}</h2>

<section class="d-flex flex-column align-items-center">
    <div class="col-md-4 card mb-5">
        <div class="card-body">

            <h3 class="card-text">Episode: {{ episode.number }} - {{ episode.slug }}</h3>
            <p class="card-text">Synopsis
                : {{ episode.synopsis }}</p>
        </div>
    </div>

    <div class="d-flex justify-content-between col-md-4">
        <a href="{{ path('episode_index') }}">
            <button class="btn btn-success">Retour à la liste des épisodes</button>
        </a>
        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">
            <button class="btn btn-warning">Modifier</button>
        </a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
