{% block body %}
    <div class="d-flex justify-content-center my-5">
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.number) }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.synopsis) }}
            {{ form_widget(form.synopsis, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.season) }}
            {{ form_widget(form.season, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button class="btn btn-return">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}