<section class="d-flex justify-content-center mb-5">
    <div class="col-md-6">
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.number) }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.synopsis) }}
            {{ form_widget(form.synopsis,
                {'attr': {'class': 'form-control', 'rows': 7}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.season) }}
            {{ form_widget(form.season, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button class="btn btn-warning mb-5">{{ button_label|default('Save') }}</button>

        {{ form_end(form) }}

        <div class="d-flex justify-content-between col-md-4">
            <a href="{{ path('episode_index') }}">
                <button class="btn btn-success">Retour à la liste des épisodes</button>
            </a>
        </div>
    </div>
</section>