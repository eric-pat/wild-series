{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center my-5">S'enregistrer</h1>

    <div class="container d-flex justify-content-center">
        <div class="d-flex justify-content-center"
             style="background-color: var(--primary-color); width: 30%;">
            {{ form_start(registrationForm, {'attr': {'class': 'w-100'}}) }}
            <div class="d-flex justify-content-center">
                <img src="{{ asset('images/logo-navbar.png') }}" alt="logo Wild-series">
            </div>
            <div class="mb-3 mx-3">
                <label for="username" class="form-label">Email</label><br>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3 mx-3">
                <label for="password" class="form-label">Password</label><br>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3 mx-3">
                <label for="password" class="form-label">Accepter les termes</label>
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>

            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary m-lg-3">Valider</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

