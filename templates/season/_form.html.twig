{% block body %}
    <div class="d-flex justify-content-center my-5">
        {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.number) }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.year) }}
            {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.program) }}
            {{ form_widget(form.program, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button class="btn btn-return">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}